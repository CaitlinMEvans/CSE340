<h1><%= title %></h1>

<%- messages() %> <% if (locals.errors) { %>
<ul class="notice">
  <% locals.errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<!-- Account Update Form -->
<form id="updateAccountForm" action="/account/update-account" method="post">
  <fieldset>
    <legend>Update Account Information</legend>

    <label for="account_firstname">First Name:</label>
    <input
      type="text"
      id="account_firstname"
      name="account_firstname"
      required
      value="<%= locals.account_firstname %>"
    />

    <label for="account_lastname">Last Name:</label>
    <input
      type="text"
      id="account_lastname"
      name="account_lastname"
      required
      value="<%= locals.account_lastname %>"
    />

    <label for="account_email">Email:</label>
    <input
      type="email"
      id="account_email"
      name="account_email"
      required
      value="<%= locals.account_email %>"
    />

    <input type="hidden" name="account_id" value="<%= locals.account_id %>" />

    <button type="submit" class="submit-btn">Update Account</button>
  </fieldset>
</form>

<!-- Change Password Form -->
<form id="updatePasswordForm" action="/account/update-password" method="post">
  <fieldset>
    <legend>Change Password</legend>

    <p class="password-note">
      Enter a new password to change your current password. Password must be at
      least 12 characters and contain at least 1 uppercase, 1 lowercase, 1
      number, and 1 special character.
    </p>

    <label for="account_password">New Password:</label>
    <input
      type="password"
      id="account_password"
      name="account_password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    />

    <input type="hidden" name="account_id" value="<%= locals.account_id %>" />

    <button type="submit" class="submit-btn">Update Password</button>
  </fieldset>
</form>

<p class="back-link">
  <a href="/account/">Back to Account Management</a>
</p>
