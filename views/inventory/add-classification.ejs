<h1><%= title %></h1>
<%- messages() %> <% if (locals.errors) { %>
<ul class="notice">
  <% locals.errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form id="addClassificationForm" action="/inv/add-classification" method="post">
  <fieldset>
    <legend>Add a New Vehicle Classification</legend>

    <label for="classification_name">Classification Name:</label>
    <span class="form-note"
      >Name cannot contain spaces or special characters</span
    >
    <input
      type="text"
      id="classification_name"
      name="classification_name"
      required
      pattern="^[a-zA-Z0-9]+$"
      title="Classification name cannot contain spaces or special characters"
      placeholder="Enter classification name"
      value="<%= locals.classification_name %>"
    />

    <button type="submit" class="submit-btn">Add Classification</button>
  </fieldset>
</form>

<p class="back-link">
  <a href="/inv/">Back to Management</a>
</p>
