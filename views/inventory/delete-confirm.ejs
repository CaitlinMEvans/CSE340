<h1><%= title %></h1>
<%- messages() %> <% if (locals.errors) { %>
<ul class="notice">
  <% locals.errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<p>Confirm Deletion - The delete is permanent.</p>

<form id="deleteForm" action="/inv/delete" method="post">
  <fieldset>
    <legend>Confirm Vehicle Deletion</legend>

    <label for="inv_make">Make:</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      readonly
      value="<%= locals.inv_make %>"
    />

    <label for="inv_model">Model:</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      readonly
      value="<%= locals.inv_model %>"
    />

    <label for="inv_year">Year:</label>
    <input
      type="text"
      id="inv_year"
      name="inv_year"
      readonly
      value="<%= locals.inv_year %>"
    />

    <label for="inv_price">Price:</label>
    <input
      type="text"
      id="inv_price"
      name="inv_price"
      readonly
      value="<%= locals.inv_price %>"
    />

    <button type="submit" class="submit-btn">Delete Vehicle</button>

    <input type="hidden" name="inv_id" value="<%= locals.inv_id %>" />
  </fieldset>
</form>

<p class="back-link">
  <a href="/inv/">Back to Management</a>
</p>
